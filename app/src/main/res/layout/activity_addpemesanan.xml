<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UserUI.jenisolahraga.caritempat.detail.addpemesanan">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/namatempat"
            android:textSize="20sp"
            android:hint="Nama Tempat"
            android:textColor="@color/darkteal"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/jenislapangan"
            android:textSize="20sp"
            android:hint="Jenis Lapangan"
            android:textColor="@color/darkteal"
            android:layout_marginBottom="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="200dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/tanggalpemesanan"
                android:textSize="20sp"
                android:hint="Tanggal Pesan"
                android:layout_marginBottom="15dp"
                android:textColor="@color/darkteal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/lihattanggal"
                android:text="lihat tanggal"/>

        </LinearLayout>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/namapemesan"
            android:textSize="20sp"
            android:hint="Nama Pemesan"
            android:layout_marginBottom="15dp"
            android:textColor="@color/darkteal"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/nomortelppemesanan"
            android:textSize="20sp"
            android:hint="Nomor Telpon Pemesan"
            android:layout_marginBottom="15dp"
            android:inputType = "number"
            android:textColor="@color/darkteal"/>

        <TextView
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/jamtersedia"
            android:textSize="20sp"
            android:hint=""
            android:layout_marginBottom="15dp"
            android:textColor="@color/darkteal"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rootlayout"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/pesan"
            android:textSize="20sp"
            android:text="Pesan"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/batal"
            android:textSize="20sp"
            android:text="Cancel"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coba"/>
    </LinearLayout>
</ScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>