<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PengelolaUI.datalapangan.editdatalapangan">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Edit Data Lapangan"
        android:textColor="@color/darkteal"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="30sp"
        android:layout_marginBottom="50dp"/>
    <EditText
        android:id="@+id/namalapanganeditdatamitra"
        android:layout_width="300dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:text="Nama lapangan"/>

    <EditText
        android:id="@+id/deskripsilapanganeditdatamitra"
        android:layout_width="300dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi lapangan"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Jam Tersedia saat ini :"
        android:textColor="@color/darkteal"/>

    <TextView
        android:id="@+id/jamtersediamitraedit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Jam Tersedia :"
        android:textColor="@color/darkteal"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Edit Jam Buka :"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Edit Jam Tutup :"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rootlayouteditdatalapangan"/>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rootlayouteditdatalapangan2"/>
    </LinearLayout>

    <Button
        android:id="@+id/submiteditdatalapangan"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:onClick="update"/>
    <Button
        android:id="@+id/backeditdatalapangan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Back"/>

</LinearLayout>