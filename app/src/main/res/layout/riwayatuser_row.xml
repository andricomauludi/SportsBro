<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/jenisolahragariwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis olahraga"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/namatempatriwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Tempat"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/namalapanganriwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lapangan"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/tanggalpemesananriwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pemesanan"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/namalapanganriwayat" />

                    <TextView
                        android:id="@+id/waktupemesananriwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu dipesan"
                        android:textSize="10sp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:id="@+id/statuspemesananriwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="10sp"
                        android:paddingBottom="5dp"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >

                    <Button
                        android:id="@+id/lihatdetailriwayat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_login"
                        android:text="detail"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>