<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbluetheme"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/darkbluetheme"
        tools:context=".PengelolaUI.pendinglist.DetailPendingList">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:padding="30dp"
            android:background="@drawable/button_white"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Pending List"
                android:textColor="@color/darkteal"
                android:textStyle="bold"
                android:gravity="top"
                android:textSize="25sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/namapemesandetailpendinglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pemesan"
                android:textColor="@color/darkteal"
                android:textStyle="bold"
                android:gravity="top"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waktu Dilakukan Pemesanan     :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/timestampdetailpendinglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Pemesanan"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lapangan yang Dipilih     :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/namalapangandetailpendinglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilihan Lapangan"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Menggunakan Lapangan      :"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tanggalpemesanandetailpendinglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal main"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Menggunakan Lapangan      :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/waktupemesanandetailpendinglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam main"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/statuspemesanandetailpendinglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_marginBottom="10dp"
                android:textSize="25sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingin Menghubungi Penyewa?"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/whatsapppendinglist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whatsapp"
                        android:textSize="10sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <Button
                        android:id="@+id/teleponpendinglist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telepon"
                        android:textSize="10sp"
                        />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Button
                        android:visibility="gone"
                        android:id="@+id/tolakpendinglist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tolak"
                        android:textSize="10sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <Button
                        android:visibility="gone"
                        android:id="@+id/terimapendinglist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terima"
                        android:textSize="10sp"
                        />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:visibility="gone"
                android:id="@+id/terimacancelpendinglist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terima Pembatalan"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10sp"
                />

            <Button
                android:id="@+id/backpendinglist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10sp"
                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>