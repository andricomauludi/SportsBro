<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".AdminUI.datatempat.DetailDataTempat"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Tempat"
            android:textColor="@color/darkteal"
            android:textStyle="bold"
            android:gravity="top"
            android:textSize="30sp"
            android:layout_marginBottom="35dp"/>

        <TextView
            android:id="@+id/namatempatdetaildatatempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Tempat"
            android:textColor="@color/darkteal"
            android:textStyle="bold"
            android:gravity="top"
            android:textSize="25sp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Olahraga     :"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/jenisolahragadetaildatatempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Olahraga"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Tempat     :"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/alamattempatdetaildatatempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitra      :"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/mitradetaildatatempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon Tempat      :"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/nomortelptempatdetaildatatempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black"
            android:gravity="top"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/backdatatempat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>

</ScrollView>